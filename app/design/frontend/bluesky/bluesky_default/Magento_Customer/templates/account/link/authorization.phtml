    <a <?= /* @noEscape */ $block->getLinkAttributes() ?>
        <?= /* @noEscape */ $dataPostParam ?>><?= $escaper->escapeHtml($block->getLabel()) ?></a>
</li>
<?php 
if($my_account_link){
?>
<li class="my_account_link_custom"><a href="<?php echo $this->getUrl('customer/account');?>" title="<?php echo __('My Account'); ?>"><?php echo __('My Account'); ?></a></li>
